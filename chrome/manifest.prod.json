{
  "version": "0.0.0",
  "name": "espn-bet-tracker",
  "manifest_version": 2,
  "description": "Chrome extension for espn-bet-tracker",
  "browser_action": {
    "default_title": "ESPN Bet Tracker"
  },
  "web_accessible_resources": [
    "inject.html"
  ],
  "background": {
    "page": "background.html"
  },
  "permissions": [ "contextMenus", "tabs", "storage", "http://www.espn.com/*" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
